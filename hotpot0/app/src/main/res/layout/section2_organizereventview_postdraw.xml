<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_background">

    <!-- Scrollable content -->
    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:fillViewport="true"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/bottomNavigationView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <Button
                android:id="@+id/button_BackPostDraw"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:backgroundTint="@color/text"
                android:text="@string/back"
                android:textColor="#FFFFFF"
                android:textStyle="bold"
                android:padding="6dp"
                android:layout_gravity="start" />

            <ImageView
                android:id="@+id/eventImage"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_marginBottom="16dp"
                android:background="#E0E0E0"
                android:scaleType="centerCrop" />

            <!-- Event Info -->
            <TextView
                android:id="@+id/previewEventName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:textStyle="bold"
                android:gravity="center_horizontal"
                android:layout_marginBottom="8dp" />

            <!-- Fill Spots Button -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal"
                android:layout_marginTop="16dp">

                <Button
                    android:id="@+id/button_fillSpots"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/fill_spots"
                    android:textColor="#FFFFFF"
                    android:backgroundTint="@color/text"
                    android:gravity="center" />
            </LinearLayout>

            <!-- Sampled Entrants Section -->
            <TextView
                android:id="@+id/SampledEntrantsLabel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/sampled_entrants"
                android:textStyle="bold"
                android:textSize="14sp"
                android:textColor="@color/text"
                android:layout_marginTop="24dp"
                android:layout_marginBottom="8dp" />

            <LinearLayout
                android:id="@+id/sampled_entrants_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <include layout="@layout/profile_blob" />
            </LinearLayout>

            <!-- Confirm Button -->
            <Button
                android:id="@+id/button_confirm"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/confirm"
                android:enabled="false"
                android:textColor="#FFFFFF"
                android:backgroundTint="@color/text"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="8dp" />

            <!-- Cancelled Entrants Section -->
            <TextView
                android:id="@+id/CancelledEntrantsLabel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/cancelled_entrants"
                android:textStyle="bold"
                android:textSize="14sp"
                android:textColor="@color/text"
                android:layout_marginTop="24dp"
                android:layout_marginBottom="8dp" />

            <LinearLayout
                android:id="@+id/cancelled_entrants_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <include layout="@layout/profile_blob" />
            </LinearLayout>

            <!-- All Entrants -->
            <TextView
                android:id="@+id/AllEntrantsLabel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/all_entrants"
                android:textStyle="bold"
                android:textSize="14sp"
                android:textColor="@color/text"
                android:layout_marginTop="24dp"
                android:layout_marginBottom="8dp" />

            <LinearLayout
                android:id="@+id/all_entrants_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <include layout="@layout/profile_blob" />
            </LinearLayout>

            <!-- Map Preview -->
            <ImageView
                android:id="@+id/mapPreview"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_marginTop="24dp"
                android:background="#E0E0E0"
                android:scaleType="centerCrop" />
        </LinearLayout>
    </ScrollView>

    <!-- Bottom Navigation -->
    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottomNavigationView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@color/bar"
        app:menu="@menu/bottom_nav_menu"
        app:itemIconTint="@color/nav_item_selector"
        app:itemTextColor="@color/nav_item_selector"
        app:labelVisibilityMode="labeled"
        app:itemIconSize="30dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>

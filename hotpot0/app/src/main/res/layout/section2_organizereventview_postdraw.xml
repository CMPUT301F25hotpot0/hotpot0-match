<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_background">

    <!-- Scrollable Content -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:padding="20dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Back Button -->
            <Button
                android:id="@+id/button_BackPostDraw"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/text"
                android:text="@string/back"
                android:textColor="#FFFFFF"
                android:textStyle="bold"
                android:padding="6dp"
                android:layout_gravity="start"
                android:layout_marginBottom="16dp" />

            <!-- Event Image -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/eventImageCard"
                android:layout_width="match_parent"
                android:layout_height="230dp"
                android:layout_marginBottom="20dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="8dp"
                app:cardUseCompatPadding="true">

                <ImageView
                    android:id="@+id/eventImage"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:adjustViewBounds="true"
                    android:scaleType="centerCrop"
                    android:maxHeight="400dp"
                    android:contentDescription="Event Poster" />

            </com.google.android.material.card.MaterialCardView>

            <!-- Event Name (centered like first XML) -->
            <TextView
                android:id="@+id/previewEventName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Event Name"
                android:textColor="@color/text"
                android:textSize="22sp"
                android:textStyle="bold"
                android:gravity="center"
                android:layout_marginBottom="12dp" />

            <!-- Description -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Description"
                android:textColor="@color/text"
                android:textStyle="bold"
                android:textSize="16sp"
                android:layout_marginBottom="4dp" />

            <TextView
                android:id="@+id/previewDescription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#FFFFFF"
                android:textSize="15sp"
                android:layout_marginBottom="12dp" />

            <!-- Guidelines -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Guidelines"
                android:textColor="@color/text"
                android:textStyle="bold"
                android:textSize="16sp"
                android:layout_marginBottom="4dp" />

            <TextView
                android:id="@+id/previewGuidelines"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#FFFFFF"
                android:textSize="15sp"
                android:layout_marginBottom="12dp" />

            <!-- Location -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Location"
                android:textColor="@color/text"
                android:textStyle="bold"
                android:textSize="16sp"
                android:layout_marginBottom="4dp" />

            <TextView
                android:id="@+id/previewLocation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#FFFFFF"
                android:textSize="15sp"
                android:layout_marginBottom="12dp" />

            <!-- Time -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Time"
                android:textColor="@color/text"
                android:textStyle="bold"
                android:textSize="16sp"
                android:layout_marginBottom="4dp" />

            <TextView
                android:id="@+id/previewTimeAndDay"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#FFFFFF"
                android:textSize="15sp"
                android:layout_marginBottom="12dp" />

            <!-- Date Range -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Event Dates"
                android:textColor="@color/text"
                android:textStyle="bold"
                android:textSize="16sp"
                android:layout_marginBottom="4dp" />

            <TextView
                android:id="@+id/previewDateRange"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#FFFFFF"
                android:textSize="15sp"
                android:layout_marginBottom="12dp" />

            <!-- Duration -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Duration"
                android:textColor="@color/text"
                android:textStyle="bold"
                android:textSize="16sp"
                android:layout_marginBottom="4dp" />

            <TextView
                android:id="@+id/previewDuration"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#FFFFFF"
                android:textSize="15sp"
                android:layout_marginBottom="12dp" />

            <!-- Price -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Price"
                android:textColor="@color/text"
                android:textStyle="bold"
                android:textSize="16sp"
                android:layout_marginBottom="4dp" />

            <TextView
                android:id="@+id/previewPrice"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#FFFFFF"
                android:textSize="15sp"
                android:layout_marginBottom="12dp" />

            <!-- Spots Open -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Total Spots Open"
                android:textColor="@color/text"
                android:textStyle="bold"
                android:textSize="16sp"
                android:layout_marginBottom="4dp" />

            <TextView
                android:id="@+id/previewSpotsOpen"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#FFFFFF"
                android:textSize="15sp"
                android:layout_marginBottom="24dp" />

            <Button
                android:id="@+id/button_fillSpots"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/fill_spots"
                android:textColor="#FFFFFF"
                android:backgroundTint="@color/text"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="12dp"
                android:layout_marginBottom="24dp" />

            <!-- ===== SAMPLED ENTRANTS ===== -->
            <TextView
                android:id="@+id/SampledEntrantsLabel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/sampled_entrants"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@color/text"
                android:layout_marginBottom="8dp"/>

            <LinearLayout
                android:id="@+id/sampled_entrants_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" />

            <!-- Confirm Button -->
            <Button
                android:id="@+id/button_confirm"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/confirm"
                android:enabled="false"
                android:textColor="#FFFFFF"
                android:backgroundTint="@color/text"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="12dp"
                android:layout_marginBottom="24dp" />

            <!-- ===== CANCELLED ENTRANTS ===== -->
            <TextView
                android:id="@+id/CancelledEntrantsLabel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/cancelled_entrants"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@color/text"
                android:layout_marginBottom="8dp"/>

            <LinearLayout
                android:id="@+id/cancelled_entrants_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" />

            <!-- ===== INTERACTIVE MAP ===== -->
            <TextView
                android:id="@+id/GeolocationHeading"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Entrants Geolocation"
                android:textColor="@color/text"
                android:textStyle="bold"
                android:textSize="16sp"
                android:layout_marginBottom="8dp" />

            <FrameLayout
                android:id="@+id/map_container"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_marginBottom="20dp" />

            <!-- ===== ALL ENTRANTS ===== -->
            <TextView
                android:id="@+id/AllEntrantsLabel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/all_entrants"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@color/text"
                android:layout_marginTop="24dp"
                android:layout_marginBottom="8dp"/>

            <LinearLayout
                android:id="@+id/all_entrants_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" />

        </LinearLayout>
    </ScrollView>

    <!-- Bottom Navigation -->
    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottomNavigationView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/bar"
        app:itemIconSize="30dp"
        app:itemIconTint="@color/nav_item_selector"
        app:itemTextColor="@color/nav_item_selector"
        app:labelVisibilityMode="labeled"
        app:menu="@menu/bottom_nav_menu" />

</LinearLayout>
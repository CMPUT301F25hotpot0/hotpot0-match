<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="12dp"
    app:cardCornerRadius="2dp"
    app:cardElevation="2dp"
    android:clickable="true"
    android:focusable="true"
    android:padding="12dp"
    app:cardBackgroundColor="@color/bar">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Row: title + time -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/notification_title"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Notification title"
                android:textColor="@color/text"
                android:textSize="15sp"
                android:textStyle="bold"
                android:padding="4dp"/>

            <TextView
                android:id="@+id/notification_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2025-11-30 18:23"
                android:textColor="@color/text"
                android:textSize="12sp"
                android:padding="4dp" />
        </LinearLayout>

        <!-- Collapsed preview (2 lines) -->
        <TextView
            android:id="@+id/notification_preview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="This is the preview of the notification. It will be shown in two lines and ellipsized if longer."
            android:textColor="@color/text"
            android:textSize="14sp"
            android:maxLines="2"
            android:ellipsize="end"
            android:layout_marginTop="6dp"
            android:padding="4dp"/>

        <!-- Expanded area (initially gone) -->
        <LinearLayout
            android:id="@+id/notification_expanded"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone"
            android:paddingTop="10dp"
            android:padding="4dp">

            <TextView
                android:id="@+id/notification_full_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Full notification text"
                android:textColor="@color/text"
                android:textSize="14sp"
                android:padding="4dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="end"
                android:paddingTop="8dp">

                <Button
                    android:id="@+id/go_to_event_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/go_to_event"
                    android:backgroundTint="@color/text"
                    android:textColor="@color/white"
                    android:paddingLeft="12dp"
                    android:paddingRight="12dp" />
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>

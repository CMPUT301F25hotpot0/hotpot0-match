<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_background">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp">

        <!-- Page Title -->
        <TextView
            android:id="@+id/title_create_event"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/create_event"
            android:textColor="@color/text"
            android:textSize="24sp"
            android:textStyle="bold"
            android:paddingTop="10dp"
            android:layout_marginBottom="16dp"/>

        <!-- Upload Image Section -->
        <LinearLayout
            android:id="@+id/upload_section"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:orientation="vertical"
            android:gravity="center"
            android:background="#F3F3F3"
            android:layout_marginBottom="8dp"
            android:padding="16dp"
            android:layout_gravity="center"
            android:foreground="?attr/selectableItemBackground"
            android:clickable="true">

            <ImageView
                android:id="@+id/icon_upload"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/ic_camera"
                app:tint="@color/black"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/upload_image"
                android:textSize="16sp"
                android:textColor="#000000"
                android:layout_marginTop="8dp"/>

            <!-- Delete icon (hidden until image is uploaded) -->
            <ImageView
                android:id="@+id/delete_image"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_gravity="end"
                android:layout_marginTop="8dp"
                android:src="@drawable/ic_delete"
                app:tint="#A0A0A0"
                android:visibility="gone" />
        </LinearLayout>

        <!-- Input Fields -->
        <EditText
            android:id="@+id/input_event_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/event_name"
            android:background="@color/bar"
            android:padding="12dp"
            android:layout_marginTop="8dp"
            android:inputType="text"/>

        <EditText
            android:id="@+id/input_event_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/event_description"
            android:background="@color/bar"
            android:padding="12dp"
            android:layout_marginTop="8dp"
            android:inputType="textMultiLine"/>

        <EditText
            android:id="@+id/input_event_guidelines"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/event_guidelines"
            android:background="@color/bar"
            android:padding="12dp"
            android:layout_marginTop="8dp"
            android:inputType="textMultiLine"/>

        <EditText
            android:id="@+id/input_location"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/location"
            android:background="@color/bar"
            android:padding="12dp"
            android:layout_marginTop="8dp"
            android:inputType="text"/>

        <EditText
            android:id="@+id/input_event_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/what_time_does_event_occur"
            android:background="@color/bar"
            android:padding="12dp"
            android:layout_marginTop="8dp"
            android:inputType="text"/>

        <EditText
            android:id="@+id/input_event_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/when_does_event_occur"
            android:background="@color/bar"
            android:padding="12dp"
            android:layout_marginTop="8dp"
            android:inputType="date"/>

        <EditText
            android:id="@+id/input_event_duration"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/how_long_will_event_occur_dd_mm_yyyy_dd_mm_yyyy"
            android:background="@color/bar"
            android:padding="12dp"
            android:layout_marginTop="8dp"
            android:inputType="text"/>

        <EditText
            android:id="@+id/input_price"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/price_of_event"
            android:background="@color/bar"
            android:padding="12dp"
            android:layout_marginTop="8dp"
            android:inputType="numberDecimal"/>

        <EditText
            android:id="@+id/input_capacity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/number_of_people_you_can_accommodate"
            android:background="@color/bar"
            android:padding="12dp"
            android:layout_marginTop="8dp"
            android:inputType="number"/>

        <EditText
            android:id="@+id/input_registration_period"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/registration_period_dd_mm_yyyy_dd_mm_yyyy"
            android:background="@color/bar"
            android:padding="12dp"
            android:layout_marginTop="8dp"
            android:inputType="text"/>

        <!-- Geolocation Switch -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginTop="16dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/geolocation_for_participants"
                android:textColor="color/text"
                android:textSize="16sp"/>

            <Switch
                android:id="@+id/switch_geolocation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:thumbTint="@color/text"
                android:trackTint="@color/bar"/>
        </LinearLayout>

        <!-- Preview Button -->
        <Button
            android:id="@+id/button_preview_event"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:backgroundTint="@color/text"
            android:text="@string/preview_event"
            android:textColor="#FFFFFF"
            android:textStyle="bold"
            android:padding="12dp"
            android:layout_gravity="center" />

    </LinearLayout>
</ScrollView>
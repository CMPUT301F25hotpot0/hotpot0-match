<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_background">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp">

        <!-- Event Image - Updated to MaterialCardView -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/eventImageCard"
            android:layout_width="match_parent"
            android:layout_height="230dp"
            android:layout_marginBottom="20dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="8dp"
            app:cardUseCompatPadding="true">

            <ImageView
                android:id="@+id/eventImage"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                android:scaleType="centerCrop"
                android:maxHeight="400dp"
                android:contentDescription="Event Poster" />

        </com.google.android.material.card.MaterialCardView>

        <!-- Event Name -->
        <TextView
            android:id="@+id/previewEventName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Event Name"
            android:textColor="@color/text"
            android:textSize="22sp"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_marginBottom="12dp" />

        <!-- Description -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Description"
            android:textColor="@color/text"
            android:textStyle="bold"
            android:textSize="16sp"
            android:layout_marginBottom="4dp" />

        <TextView
            android:id="@+id/previewDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#FFFFFF"
            android:layout_marginBottom="12dp"
            android:textSize="15sp" />

        <Spinner
            android:id="@+id/EventDetailsSpinner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Click to view more details"
            android:textColor="@color/text"
            android:layout_marginBottom="12dp"/>

        <!-- Guidelines -->
<!--        <TextView-->
<!--            android:layout_width="match_parent"-->
<!--            android:layout_height="wrap_content"-->
<!--            android:text="Guidelines"-->
<!--            android:textColor="@color/text"-->
<!--            android:textStyle="bold"-->
<!--            android:textSize="16sp"-->
<!--            android:layout_marginBottom="4dp" />-->

        <TextView
            android:id="@+id/previewGuidelines"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#FFFFFF"
            android:layout_marginBottom="12dp"
            android:textSize="15sp" />

        <!-- Location -->
<!--        <TextView-->
<!--            android:layout_width="match_parent"-->
<!--            android:layout_height="wrap_content"-->
<!--            android:text="Location"-->
<!--            android:textColor="@color/text"-->
<!--            android:textStyle="bold"-->
<!--            android:textSize="16sp"-->
<!--            android:layout_marginBottom="4dp" />-->

        <TextView
            android:id="@+id/previewLocation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#FFFFFF"
            android:layout_marginBottom="12dp"
            android:textSize="15sp" />

        <!-- Time and Date -->
<!--        <TextView-->
<!--            android:layout_width="match_parent"-->
<!--            android:layout_height="wrap_content"-->
<!--            android:text="Time"-->
<!--            android:textColor="@color/text"-->
<!--            android:textStyle="bold"-->
<!--            android:textSize="16sp"-->
<!--            android:layout_marginBottom="4dp" />-->

        <TextView
            android:id="@+id/previewTimeAndDay"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#FFFFFF"
            android:layout_marginBottom="12dp"
            android:textSize="15sp" />

<!--        <TextView-->
<!--            android:layout_width="match_parent"-->
<!--            android:layout_height="wrap_content"-->
<!--            android:text="Event Dates"-->
<!--            android:textColor="@color/text"-->
<!--            android:textStyle="bold"-->
<!--            android:textSize="16sp"-->
<!--            android:layout_marginBottom="4dp" />-->

        <TextView
            android:id="@+id/previewDateRange"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#FFFFFF"
            android:layout_marginBottom="12dp"
            android:textSize="15sp" />

        <!-- Duration -->
<!--        <TextView-->
<!--            android:layout_width="match_parent"-->
<!--            android:layout_height="wrap_content"-->
<!--            android:text="Duration"-->
<!--            android:textColor="@color/text"-->
<!--            android:textStyle="bold"-->
<!--            android:textSize="16sp"-->
<!--            android:layout_marginBottom="4dp" />-->

        <TextView
            android:id="@+id/previewDuration"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#FFFFFF"
            android:layout_marginBottom="12dp"
            android:textSize="15sp" />

        <!-- Price -->
<!--        <TextView-->
<!--            android:layout_width="match_parent"-->
<!--            android:layout_height="wrap_content"-->
<!--            android:text="Price"-->
<!--            android:textColor="@color/text"-->
<!--            android:textStyle="bold"-->
<!--            android:textSize="16sp"-->
<!--            android:layout_marginBottom="4dp" />-->

        <TextView
            android:id="@+id/previewPrice"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#FFFFFF"
            android:layout_marginBottom="12dp"
            android:textSize="15sp" />

        <!-- Capacity -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="4dp"
            android:text="Total Spots Open"
            android:textColor="@color/text"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/previewSpotsOpen"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#FFFFFF"
            android:layout_marginBottom="12dp"
            android:textSize="15sp" />

        <!-- Currently in Waiting List -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="4dp"
            android:text="Currently in Waiting List"
            android:textColor="@color/text"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/previewWaitingList"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#FFFFFF"
            android:layout_marginBottom="12dp"
            android:textSize="15sp" />

        <!-- Registration Period & Days left -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Registration Period"
            android:textColor="@color/text"
            android:textStyle="bold"
            android:textSize="16sp"
            android:layout_marginBottom="4dp" />

        <TextView
            android:id="@+id/previewDaysLeft"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#FFFFFF"
            android:layout_marginBottom="16dp"
            android:textSize="15sp" />

        <!-- Geolocation -->
        <TextView
            android:id="@+id/GeolocationStatus"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Geolocation Enabled"
            android:gravity="center"
            android:textColor="@color/text"
            android:textStyle="bold"
            android:layout_marginBottom="24dp"
            android:visibility="gone" />

        <!-- Join/Leave Waitlist and Back Buttons -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal"
            android:layout_marginTop="16dp">

            <Button
                android:id="@+id/button_join_or_leave_waitlist"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/join_waitlist"
                android:textColor="#FFFFFF"
                android:backgroundTint="@color/text"
                android:layout_marginEnd="16dp" />

            <Button
                android:id="@+id/button_BottomBackPreviewEvent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/back"
                android:textColor="#FFFFFF"
                android:backgroundTint="@color/text" />

        </LinearLayout>
    </LinearLayout>
</ScrollView>